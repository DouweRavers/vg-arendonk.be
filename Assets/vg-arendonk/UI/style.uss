.label-title {
    font-size: 60px;
    color: rgb(5, 133, 123);
    -unity-font-style: bold;
    transition-duration: 0.3s;
}

.label-title:hover {
    font-size: 60px;
    color: rgb(219, 207, 28);
    -unity-font-style: bold;
    transition-duration: 0.3s;
    scale: 1.1 1.1;
}

.label-title:active {
    font-size: 60px;
    color: rgb(255, 255, 255);
    -unity-font-style: bold;
    scale: 1.2 1.2;
    transition-duration: 0.1s;
}

.label-h1 {
    font-size: 40px;
    color: rgb(255, 41, 0);
}

.label-h1:hover {
    font-size: 40px;
    color: rgb(255, 144, 0);
}

.menu-show {
    transition-duration: 0s, 1s, 1s;
    transition-property: display, scale, max-height;
    transform-origin: top;
    max-height: 500px;
}

.menu-hide {
    display: flex;
    transform-origin: top;
    transition-property: scale, display, max-height;
    transition-delay: 0s, 1s, 0s;
    transition-duration: 1s, 0s, 1s;
    scale: 1 0;
    max-height: 0;
}
